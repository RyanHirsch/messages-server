{
  "name": "messages-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "package": "npm run clean && npm run build && docker-compose build",
    "build": "babel src -d dist",
    "build:debug": "npm run build -- --source-maps=inline",
    "format": "prettier --write --single-quote --trailing-comma es5 --print-width=120 --tab-width=2 \"src/**/*.js\"",
    "lint": "eslint src/**/*.js --quiet",
    "clean": "rm -rf dist/",
    "start": "node dist/index.js",
    "dev": "babel-watch src/index.js",
    "test": "NODE_ENV=test mocha --require babel-register './test/**/*-test.js' --exit",
    "test:tdd": "NODE_ENV=test mocha --require babel-register './test/**/*-test.js' --reporter tap --exit"
  },
  "author": "Ryan Hirsch <ryan.hirsch@gmail.com> (http://hirsch.io)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-watch": "^2.0.7",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.3.1",
    "faker": "^4.1.0",
    "jest": "^21.2.1",
    "prettier": "^1.7.4",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "@meanie/mongoose-to-json": "^2.0.2",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "jsonapi-serializer": "^3.5.5",
    "mongoose": "^4.12.3",
    "morgan": "^1.9.0",
    "serve-static": "^1.13.1",
    "winston": "^2.4.0"
  }
}
